<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:autoStart="true"
        android:flipInterval="3500"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/image_slider1"
            android:layout_gravity="top"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider4" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider6" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider7" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_slider8" />

    </ViewFlipper>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Back"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnChest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/chest_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Chest"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Chest"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnBicep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bicep_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bicep"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bicep"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnTricep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tricep_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Tricep"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tricep"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnShoulder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shoulder_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Shoulder"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Shoulder"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnAbs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abs_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Abs"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Abs"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageButton
                    android:id="@+id/btnLegs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/legs_muscle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Legs"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Legs"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:background="@android:color/transparent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/nav_logout_24px"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/logout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="@string/logout"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>